<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Frags.Location_Selection.Personal_Detail.Detail_Tab1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/colorAccent"
                    android:lines="1"
                    android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/textView10" android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_mode_edit_black_24dp"
                       android:tint="@color/colorAccent"
                       app:layout_constraintTop_toTopOf="@+id/textView10"
                       android:layout_marginEnd="8dp"
                       android:layout_marginRight="8dp" android:id="@+id/imageView2"
                       app:layout_constraintEnd_toStartOf="@+id/textView10"
                       app:layout_constraintBottom_toBottomOf="@+id/textView10"/>

            <TextView android:id="@+id/text1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:lines="1"
                      android:text="Name" android:layout_marginTop="24dp"
                      app:layout_constraintTop_toBottomOf="@+id/imageView2"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

            <TextView android:id="@+id/text2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:text="Phone No."
                      android:lines="1"
                      android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text1"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

            <TextView android:id="@+id/text3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:lines="1"
                      android:text="Address" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text2"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

            <TextView android:id="@+id/text4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:lines="1"
                      android:text="Email" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text3"
                      app:layout_constraintStart_toStartOf="parent"
                      android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

            <TextView android:id="@+id/name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:lines="1"
                      android:text="Cheena Niraula"
                      android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
                      app:layout_constraintStart_toEndOf="@+id/text2"
                      app:layout_constraintTop_toTopOf="@+id/text1"/>

            <TextView android:id="@+id/phone"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:text="9842420134"
                      android:lines="1"
                      android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text1"
                      app:layout_constraintStart_toStartOf="@+id/name"/>

            <TextView android:id="@+id/address"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:lines="1"
                      android:text="Thimi, Kathmandu" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text2"
                      app:layout_constraintStart_toStartOf="@+id/phone"
            />

            <TextView android:id="@+id/email"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:lines="1"
                      android:text="niraula101@gmail.com" android:layout_marginTop="16dp"
                      app:layout_constraintTop_toBottomOf="@+id/text3"
                      app:layout_constraintStart_toStartOf="@+id/address"
                      android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>